---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2WithList from '~/components/widgets/Features2WithList.astro';
import { getPermalink } from '~/utils/permalinks';
import { useTranslations, getLangFromUrl, getLocalizedUrl } from '~/utils/i18n';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const metadata = {
  title: 'Solidago Advisory',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: t('hero.contactUs'),
        href: getLocalizedUrl(getPermalink('/contact'), currentLang),
        target: '_blank',
      },
      // { text: t('hero.learnMore'), href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'Solidago Hero Image' }}
  >
    <Fragment slot="title">
      {t('hero.title').split('expert')[0]}<span class="text-accent dark:text-white highlight">expert</span>{
        t('hero.title').split('expert')[1] || ' support'
      }
    </Fragment>

    <Fragment slot="subtitle">
      {t('hero.subtitle')}
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Features2 Widget *************** -->

  <Features2WithList
    title={t('features.title')}
    subtitle={t('features.subtitle')}
    columns={4}
    items={[
      {
        title: t('features.businessSetup.title'),
        description: [t('features.businessSetup.businessConsulting'), t('features.businessSetup.companyIncorporation')],
        icon: 'flat-color-icons:positive-dynamic',
      },
      {
        title: t('features.accountingTaxation.title'),
        description: [
          t('features.accountingTaxation.bookkeeping'),
          t('features.accountingTaxation.financialReporting'),
          t('features.accountingTaxation.gstCompliance'),
          t('features.accountingTaxation.corporateTax'),
          t('features.accountingTaxation.personalTax'),
        ],
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: t('features.companySecretary.title'),
        description: [
          t('features.companySecretary.registeredAddress'),
          t('features.companySecretary.companySecretary'),
          t('features.companySecretary.annualReturn'),
          t('features.companySecretary.xbrlCompilation'),
        ],
        icon: 'flat-color-icons:document',
      },
      {
        title: t('features.addOnServices.title'),
        description: [
          t('features.addOnServices.payrollOutsourcing'),
          t('features.addOnServices.cpfRegistration'),
          t('features.addOnServices.ir8aFiling'),
          t('features.addOnServices.ir21TaxClearance'),
          t('features.addOnServices.corpPassRegistration'),
          t('features.addOnServices.andMore'),
        ],
        icon: 'flat-color-icons:puzzle',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
    </Fragment>
  </Features2WithList>
</Layout>
