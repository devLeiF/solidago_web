---
import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Certificates from '~/components/widgets/Certificates.astro';
import Layout from '~/layouts/PageLayout.astro';

import acraLogo from '~/assets/images/cert/acra.png';
import iscaLogo from '~/assets/images/cert/ISCA.webp';
import cawnmLogo from '~/assets/images/cert/CAWNM.png';
import sctpLogo from '~/assets/images/cert/SCTP.png';
import accaLogo from '~/assets/images/cert/ACCA_logo.png';

const metadata = {
  title: 'About us',
};

const certificates = [
  { src: acraLogo, alt: 'ACRA - Accounting and Corporate Regulatory Authority' },
  { src: iscaLogo, alt: 'ISCA - Institute of Singapore Chartered Accountants' },
  { src: cawnmLogo, alt: 'CAWNM - Chartered Accountants Worldwide Network Members' },
  { src: sctpLogo, alt: 'SCTP - Singapore Chartered Tax Professionals' },
  { src: accaLogo, alt: 'ACCA - Association of Chartered Certified Accountants' },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
    image={{
      src: '~/assets/images/about-us-1.jpg',
      alt: 'About us hero image',
    }}
  >
    <Fragment slot="title"> Welcome to Solidago Advisory </Fragment>

    <Fragment slot="subtitle">
      At Solidago Advisory, we deliver accurate, timely, and reliable corporate solutions tailored to your business
      needs. Our services include company setup, accounting, tax, corporate secretary, payroll, and advisory.
    </Fragment>
  </Hero2>

  <Hero
    image={{
      src: '~/assets/images/about-staff.jpg',
      alt: 'About us staff image',
    }}
  >
    <Fragment slot="title"> Our Staff </Fragment>

    <Fragment slot="subtitle">
      Our team is composed of <span class="underline underline-offset-1"
        >highly qualified individuals with extensive experience in accounting, taxation and company secretary</span
      >. Our senior members are <span class="font-bold">Chartered Accountants from Singapore</span>, and the rest hold
      relevant degrees and professional certificates with the required working experience in their specialized fields.
    </Fragment>
  </Hero>

  <!-- Certificates Widget ******************* -->
  <Certificates certificates={certificates} />
</Layout>
