---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import ServiceItem from '~/components/widgets/ServiceItem.astro';
import { useTranslations } from '~/utils/i18n';

const t = useTranslations('zh');

const metadata = {
  title: t('nav.payroll'),
};
---

<Layout metadata={metadata}>
  <Hero
    tagline={t('payrollPage.tagline')}
    title="<span class='text-accent'>简化的</span>薪资管理"
    subtitle={t('payrollPage.subtitle')}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'Payroll hero image' }}
  />

  <ServiceItem
    title="我们的薪资服务"
    subtitle="全面的薪资解决方案"
    items={[
      {
        title: '薪资处理',
        description: '我们提供准确、及时的薪资处理服务，确保您的员工按时收到薪资。',
        details: [
          "<b>月度薪资计算</b>：准确计算每位员工的月度薪资，包括基本工资、津贴和扣除项目。",
          "<b>加班费计算</b>：根据新加坡劳动法准确计算加班费。",
          "<b>薪资单生成</b>：为每位员工生成详细的薪资单。",
          "<b>银行转账处理</b>：协助处理薪资的银行转账。",
          "<b>薪资报表</b>：提供详细的薪资报表和分析。",
        ],
        serviceType: '服务频率：月度',
      },
      {
        title: '公积金（CPF）管理',
        description: '确保准确的CPF计算和及时提交，保持与CPF要求的合规性。',
        details: [
          "<b>CPF注册</b>：为新员工办理CPF注册。",
          "<b>CPF缴费计算</b>：准确计算雇主和员工的CPF缴费。",
          "<b>月度CPF提交</b>：及时向CPF局提交月度缴费。",
          "<b>CPF报表</b>：生成和提交各种CPF报表。",
          "<b>CPF查询处理</b>：处理来自CPF局的查询和要求。",
        ],
        serviceType: '服务频率：月度',
      },
      {
        title: '年度税务申报',
        description: '协助处理员工的年度税务申报要求，确保合规性。',
        details: [
          "<b>IR8A表格准备</b>：为每位员工准备年度IR8A表格。",
          "<b>AIS提交</b>：向IRAS提交年度信息陈述。",
          "<b>IR21税务清关</b>：为离职外籍员工处理IR21税务清关。",
          "<b>税务咨询</b>：为员工提供个人税务咨询。",
        ],
        serviceType: '服务频率：年度',
      },
      {
        title: '人力资源支持',
        description: '提供基本的人力资源支持服务，协助管理员工事务。',
        details: [
          "<b>员工合同准备</b>：协助准备符合新加坡劳动法的员工合同。",
          "<b>工作准证申请</b>：协助外籍员工申请和续签工作准证。",
          "<b>员工手册</b>：协助制定员工手册和公司政策。",
          "<b>人力资源咨询</b>：提供基本的人力资源管理咨询。",
        ],
        serviceType: '根据需要提供',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
    </Fragment>
  </ServiceItem>
</Layout> 