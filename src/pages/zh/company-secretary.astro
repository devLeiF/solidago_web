---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import ServiceItem from '~/components/widgets/ServiceItem.astro';
import { useTranslations } from '~/utils/i18n';

const t = useTranslations('zh');

const metadata = {
  title: t('nav.companySecretary'),
};
---

<Layout metadata={metadata}>
  <Hero
    tagline={t('companySecretaryPageFull.tagline')}
    title="专业的<span class='text-accent'>公司秘书</span>支持"
    subtitle={t('companySecretaryPageFull.subtitle')}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'Company secretary hero image' }}
  />

  <ServiceItem
    title="我们的公司秘书服务"
    subtitle="确保企业治理合规"
    items={[
      {
        title: '法定义务',
        description: '确保您的公司满足所有新加坡的法定要求和义务。',
        details: [
          "<b>年度申报</b>：及时提交年度申报（Annual Return）给ACRA。",
          "<b>董事会决议</b>：准备和维护董事会决议和会议记录。",
          "<b>股东决议</b>：协助准备股东大会决议和相关文件。",
          "<b>法定登记册</b>：维护公司的各种法定登记册。",
          "<b>合规监控</b>：监控和提醒重要的合规截止日期。",
        ],
        serviceType: '持续服务',
      },
      {
        title: '注册地址服务',
        description: '为您的公司提供新加坡注册地址，满足法定要求。',
        details: [
          "<b>注册地址提供</b>：提供合法的新加坡注册地址。",
          "<b>邮件接收</b>：接收和转发政府机构的官方邮件。",
          "<b>地址变更</b>：协助处理注册地址变更手续。",
          "<b>通知服务</b>：及时通知重要的政府通信。",
        ],
        serviceType: '年度服务',
      },
      {
        title: 'XBRL申报',
        description: '为需要的公司准备和提交XBRL格式的财务报表。',
        details: [
          "<b>XBRL编制</b>：将财务报表转换为XBRL格式。",
          "<b>XBRL验证</b>：确保XBRL文件符合监管要求。",
          "<b>XBRL提交</b>：向ACRA提交XBRL财务报表。",
          "<b>修正和更新</b>：处理XBRL提交的任何修正或更新。",
        ],
        serviceType: '年度服务',
      },
      {
        title: '企业治理咨询',
        description: '提供专业的企业治理建议和支持服务。',
        details: [
          "<b>董事义务咨询</b>：向董事解释其法定义务和责任。",
          "<b>合规培训</b>：为管理层提供合规要求培训。",
          "<b>最佳实践建议</b>：提供企业治理最佳实践建议。",
          "<b>法规更新</b>：及时通知相关法规的变更和更新。",
        ],
        serviceType: '根据需要提供',
      },
      {
        title: '公司变更服务',
        description: '协助处理各种公司结构和信息的变更。',
        details: [
          "<b>董事变更</b>：处理董事的委任、辞任和信息变更。",
          "<b>股份交易</b>：协助处理股份转让和发行。",
          "<b>公司名称变更</b>：协助申请和处理公司名称变更。",
          "<b>章程修改</b>：协助修改公司章程和组织大纲。",
          "<b>增资减资</b>：处理公司增资或减资的相关手续。",
        ],
        serviceType: '按需服务',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
    </Fragment>
  </ServiceItem>
</Layout> 